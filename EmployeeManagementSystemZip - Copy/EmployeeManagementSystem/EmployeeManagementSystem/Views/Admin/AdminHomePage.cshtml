@model IEnumerable<EmployeeManagementSystem.Models.User>
  
@{
    ViewBag.Title = "Admin";
    ViewBag.Title = "sess_user_name";
}
<p>Hello @ViewBag.sess_user_name</p>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
		</div>
	</div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Employee Email
			</th>
             <th>
                 Role
			</th>
         
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Email
				</td>
                <td width="30%">
                    @obj.Role
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a id="view_@obj.UserId" asp-controller="Home" asp-action="ViewEmployeeDetails" asp-route-id="@obj.UserId"
                        class="btn btn-success mx-2"> <i class="bi bi-pencil-square"></i> View</a>
                        <a id="edit_@obj.UserId" asp-controller="Admin" asp-action="Edit" asp-route-id="@obj.UserId"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                         <a id="delete_@obj.UserId" asp-controller="Admin" asp-action="Delete" asp-route-id="@obj.UserId"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        
					</div>
				</td>
			</tr>
        }
    </tbody>

</table>
 <div class="w-75 btn-group" role="group">
                         <a id="add_department" asp-controller="Admin" asp-action="AddDepartment" 
                          class="btn btn-outline-success mx-2"><i class="bi bi-pencil-square"></i> Add new Department</a>
                          <a id="create" asp-controller="Admin" asp-action="Create" 
                           name="create" class="btn btn-outline-primary mx-2"><i class="bi bi-pencil-square"></i> Add New Employee</a>
                         <a id="logout" asp-controller="Home" asp-action="Logout" 
                          class="btn btn-outline-danger mx-2"><i class="bi bi-pencil-square"></i> Logout</a>
                         
                        
                       
</div>