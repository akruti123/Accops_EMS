             @ViewBag.dep
			
		</tr>
        
          <br></br>
        <tr>
                Employee Name :
			
		</tr>
        <tr>
            @Model.Name
        </tr>
          <br></br>
        <tr>
                Employee PhoneNumber :
			
		</tr>
        <tr>
            @Model.PhoneNumber
        </tr>
          <br></br>
        <tr>
                Employee Joining Date :
			
		</tr>
          
        <tr>
            @Model.JoiningDate
        </tr>
        <br></br>
        <tr>
                Employee City :
			
		</tr>
        <tr>
            @Model.City
        </tr>
        <br></br>
        <tr>
                Employee ZipCode :
			
		</tr>
        <tr>
            @Model.Zipcode
        </tr>
        <br></br>
        <tr>
                Employee State :
			
		</tr>
        <tr>
            @Model.State
        </tr>
        <br></br>
        <tr>
                Employee Country :
			
		</tr>
        <tr>
            @Model.Country
        </tr>
    
       
    </tbody>

    </table>

     <div class="w-60 btn-group" role="group">
                           <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.UserId"
                         id="edit_@Model.UserId" class="btn btn-outline-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                         <a asp-controller="Home" asp-action="Logout" 
                          class="btn btn-outline-danger mx-2"><i class="bi bi-pencil-square"></i> Logout</a>
                         
                        
                       
</div>
